[Unit]
Description=Logstash

# Requirements
Requires=docker.service
Requires=fleet.service
Requires=elasticsearch.service
Requires=consul.service

# Dependency ordering and binding
After=docker.service
After=fleet.service
After=elasticsearch.service
After=consul.service

[Service]
TimeoutStartSec=0

# Get CoreOS environmental variables
EnvironmentFile=/etc/environment

ExecStartPre=/usr/bin/docker pull cgswong/logstash
#ExecStart=/usr/bin/docker run --rm --name %p -e KV_TYPE=consul -e KV_HOST=${COREOS_PUBLIC_IPV4} -p 5000:5000 -p 5010:5010 -p 5020:5020 -p 5025:5025 cgswong/logstash
ExecStart=/usr/bin/docker run --rm --name %p -e KV_HOST=${COREOS_PUBLIC_IPV4} -p 5000:5000 -p 5010:5010 -p 5020:5020 -p 5025:5025 cgswong/logstash
ExecStartPost=/usr/bin/etcdctl set /services/logging/logstash/host/%H ${COREOS_PUBLIC_IPV4}
#ExecStartPost=/usr/bin/curl -L http://${COREOS_PUBLIC_IPV4}:8500/v1/kv/services/logging/logstash/host/%H -XPUT -d value=${COREOS_PUBLIC_IPV4}
ExecStop=/usr/bin/docker stop %p
ExecStop=/usr/bin/docker kill %p
ExecStop=/usr/bin/docker rm %p
ExecStopPost=/usr/bin/etcdctl rmdir /services/logging/logstash/host/%H
#ExecStopPost=/usr/bin/curl -L http://${COREOS_PUBLIC_IPV4}:8500/v1/kv/services/logging/logstash/host/%H -XDELETE

[X-Fleet]
Conflicts=%p.service
